#include <bits/stdc++.h> 
void sort012(int *arr, int n)
{
   int l=0;
   int m=0;
   int h=n-1;
   while(m<=h){
      if(arr[m]==2){
         swap(arr[m],arr[h]);
         h--;
      }
      else if(arr[m]==1){
         m++;
      }
      else{
         swap(arr[l],arr[m]);
         l++;
         m++;
      }
   }
   //   Write your code here
}
